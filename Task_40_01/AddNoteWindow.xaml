<Window x:Class="Task_40_01.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_40_01"
        mc:Ignorable="d"
        Title="Заметка" Height="200" Width="250"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Заголовок"/>
        <TextBox x:Name="TitleTextBox"
                 Grid.Row="0"
                 Grid.Column="1"/>

        <TextBox Name="ContentTextBox"
                 Margin="0,5,0,5"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"/>

        <Button x:Name="AddNoteButton"
                    Click="AddNoteButton_Click"
                    Grid.Row="2"
                    Grid.Column="0"
                    MaxHeight="30"
                    MaxWidth="30"
                    IsDefault="True"
                    Background="Transparent"
                    BorderBrush="Transparent">
            <Image Source="/Icons/add-button.png"/>
        </Button>

        <Button x:Name="CancelButton"
                    Click="CancelButton_Click"
                    Grid.Row="2"
                    Grid.Column="1"
                    MaxHeight="30"
                    MaxWidth="30"
                    IsCancel="True"
                    Background="Transparent"
                    BorderBrush="Transparent">
            <Image Source="/Icons/remove.png"/>
        </Button>
    </Grid>
</Window>

    