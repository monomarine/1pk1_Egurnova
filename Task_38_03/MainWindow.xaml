<Window x:Class="Lesson_38_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_38_03"
        mc:Ignorable="d"
        Title="Учет книг" Height="400" Width="800"
        ResizeMode="NoResize"
        Loaded="Window_Loaded" 
        Closed="Window_Closed">
    
    <UniformGrid Columns="2" Margin="10">
        <!--левая часть - ввод информации о новой книге-->
        <Grid Margin="5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
            <!-- подписи полей для ввода -->
            <Label Content="Название"
                Grid.Row="0" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Автор" 
                Grid.Row="1" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Год издания"
                Grid.Row="2" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Состояние" 
                Grid.Row="3" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <!-- поля для ввода -->
            <TextBox Name="titleTextBox"
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="5"/>

            <TextBox Name="authorTextBox"
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="5"/>

            <TextBox Name="yearTextBox"
                Grid.Row="2" 
                Grid.Column="1"
                Margin="5"/>

            <!-- выпадающий список для выбора состояния книги -->
            <ComboBox Name="stateComboBox"
                Grid.Row="3" 
                Grid.Column="1"
                Margin="5">
                <ComboBoxItem Content="Отличное"/>
                <ComboBoxItem Content="Нормальное"/>
                <ComboBoxItem Content="Плохое"/>
            </ComboBox>

            <!-- кнопка для добавления книги в список -->
            <UniformGrid Columns="2"
                Grid.Row="4" 
                Grid.Column="1">

                <Button Content="Добавить"
                    Name="addBookButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsDefault="True"
                    Click="addBookButton_Click"/>

                <Button Content="Очистить"
                    Name="clearBookButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsCancel="True"
                    Click="clearBookButton_Click"/>
            </UniformGrid>
            
 
            <!-- фоновое изображение -->
            <Image Source="/Images/book.png" 
                Grid.Row="5" 
                Grid.Column="0"
                VerticalAlignment="Bottom"
                MaxHeight="100"
                MaxWidth="100" 
                Opacity="0.4"/>
            
        </Grid>
        
        <!--правая часть - список уже внесенных книг-->
        <ListBox Name="booksListBox"
            Margin="5" MouseDoubleClick="booksListBox_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Name="deleteBookMenuItem"
                              Click="deleteBookMenuItem_Click"/>
                    <MenuItem Header="Подробнее" Name="showInfoMenuItem"
                              Click="showInfoMenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>


    </UniformGrid>
</Window>
