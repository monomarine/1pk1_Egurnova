<Window x:Class="Task_38_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_38_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
            <ColumnDefinition  Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0"
                 Name="allProductsListBox"/>

        <Button Content=">" 
                Name="addProductButton"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinHeight="50"
                MinWidth="50"
                FontSize="30"/>

        <ListBox x:Name="basketListBox"
                 Grid.Row="0"
                 Grid.Column="2"/>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <RadioButton Content="доставка (+300 р.)"
                         FontSize="20"
                         VerticalContentAlignment="Center"/>
            <RadioButton Content="самовывоз"
                         FontSize="20"
                         VerticalContentAlignment="Center"/>
        </StackPanel>


    </Grid>
</Window>
